@model MyApp.Models.ViewModels.ProductVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="tex-primary">Products</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="CreateUpdate"><i class="badge-info bi-plus-circle"></i> Create New Product</a>
        </div>
    </div>
</div>
<div asp-validation-summary=All> </div>
<table id="productTable" class="table table-bordered table" style="width: 100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            @*<th>Image URL</th>*@
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>

</table>

@section scripts{
    <script src="~/js/product.js"></script>
}
